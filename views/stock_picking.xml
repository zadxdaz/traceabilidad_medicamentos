<odoo>
    <record id="action_traceability_medicamento" model="ir.actions.act_window">
    <field name="name">Trazabilidad de Medicamentos</field>
    <field name="res_model">traceability.medicamento</field>
    <field name="view_mode">tree,form</field>
    <field name="context">{}</field>
    </record>
    <record id="view_picking_form_inherit_traceability" model="ir.ui.view">
        <field name="name">stock.picking.form.inherit.traceability</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <header>
                <button name="action_open_traceability"
                        string="Ver Trazabilidad"
                        type="object"
                        class="btn-primary"
                        attrs="{'invisible': [('state', 'not in', ['done', 'assigned'])]}"/>
            </header>
        </field>
    </record>


</odoo>